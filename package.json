{
    "name": "antigravity-artifact-translator",
    "displayName": "Antigravity Artifact Translator",
    "description": "Translate artifact content to Chinese using Google Translate API",
    "version": "0.0.2",
    "publisher": "DandR",
    "repository": {
        "type": "git",
        "url": "https://github.com/ruanwz/antigravity-artifact-translator"
    },
    "engines": {
        "vscode": "^1.90.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:antigravity-translator.translateToChinese"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "antigravity-translator.translateToChinese",
                "title": "Translate Artifact"
            }
        ],
        "configuration": {
            "title": "Antigravity Artifact Translator",
            "properties": {
                "antigravity-artifact-translator.targetLanguage": {
                    "type": "string",
                    "default": "zh-CN",
                    "description": "Target language for translation",
                    "enum": [
                        "zh-CN",
                        "zh-TW",
                        "en",
                        "es",
                        "fr",
                        "de",
                        "ja",
                        "ko",
                        "ru",
                        "pt"
                    ],
                    "enumDescriptions": [
                        "Chinese (Simplified)",
                        "Chinese (Traditional)",
                        "English",
                        "Spanish",
                        "French",
                        "German",
                        "Japanese",
                        "Korean",
                        "Russian",
                        "Portuguese"
                    ]
                },
                "antigravity-artifact-translator.translationService": {
                    "type": "string",
                    "default": "google",
                    "description": "Translation service provider",
                    "enum": [
                        "google",
                        "microsoft"
                    ],
                    "enumDescriptions": [
                        "Google Translate",
                        "Microsoft Translator (Edge)"
                    ]
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "build": "npm run compile",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/vscode": "^1.90.0",
        "@types/node": "^20.0.0",
        "typescript": "^5.4.0"
    }
}